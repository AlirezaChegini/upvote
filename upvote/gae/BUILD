package(default_visibility = ["//upvote"])

load(
    "//upvote:builddefs.bzl",
    "py_appengine_binary_zip",
    "py_appengine_library",
    "upvote_appengine_binary",
)

exports_files(glob(["*.yaml"]))

# Binaries
# ==============================================================================

upvote_appengine_binary(
    name = "monolith_binary",
    srcs = ["appengine_config.py"],
    configs = glob(["*.yaml"]) + [":appengine_config.py"],
    deps = [
        "//upvote/gae/datastore:all",
        "//upvote/gae/modules/upvote_app:upvote_app_library",
        "//upvote/gae/shared:all",
    ],
)

# MPMs
# ==============================================================================

filegroup(
    name = "config_files",
    srcs = glob(["*.yaml"]),
)

# Workaround for the following error generated by `build mpm`:
# ... in deps attribute of genmpm rule //path:target: '//path:my_app_zip' does
# not have mandatory providers: 'package_content'
pkg_library(
    name = "config_files_runfiles",
    srcs = [":config_files"],
)

# AppEngine Libraries
# ==============================================================================

py_appengine_library(
    name = "appengine_config",
    srcs = ["appengine_config.py"],
    deps = [
        ":settings",
        "//upvote/gae/datastore/models:utils",
    ],
)

py_appengine_library(
    name = "settings",
    srcs = ["settings.py"],
    deps = [
        "//upvote/gae/utils:env_utils",
        "//upvote/shared:constants",
    ],
)
